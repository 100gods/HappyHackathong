<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">admin123</property>
        <property name="hibernate.connection.url">jdbc:mysql://192.168.1.115:3306/Happyhack</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="hibernate.format_sql">false</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping class="com.happy.hack.hibernate.entity.RawTable" />
        <mapping class="com.happy.hack.hibernate.entity.BudgetHotel" />
        <mapping class="com.happy.hack.hibernate.entity.LuxuryHotel" />
        <mapping class="com.happy.hack.hibernate.entity.AverageHotel" />
        <mapping class="com.happy.hack.hibernate.entity.BiGramAverage" />
        <mapping class="com.happy.hack.hibernate.entity.BiGramBudget" />
        <mapping class="com.happy.hack.hibernate.entity.BiGramLuxury" />
        <mapping class="com.happy.hack.hibernate.entity.BiGramUiaverage" />
        <mapping class="com.happy.hack.hibernate.entity.BiGramUibudget" />
        <mapping class="com.happy.hack.hibernate.entity.BiGramUiluxury" />

    </session-factory>
</hibernate-configuration>
